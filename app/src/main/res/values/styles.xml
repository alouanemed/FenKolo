<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.NoActionBar.TranslucentStatusBar">

  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

  <style name="AppTheme.ColoredButtonOverlay" parent="AppTheme">
    <item name="colorAccent">@color/colorPrimary</item>
  </style>

  <style name="AppTheme.Launch" parent="AppTheme.NoActionBar">
    <item name="android:windowBackground">@drawable/am__bg_launch</item>
  </style>

  <style name="AppTheme.Venue" parent="AppTheme.NoActionBar.TranslucentStatusBar">
    <item name="android:windowSharedElementsUseOverlay">false</item>
    <item name="android:windowEnterTransition">@transition/venue_detail_enter</item>
    <item name="android:windowReturnTransition">@transition/venue_detail_return</item>
    <item name="android:windowSharedElementReturnTransition">
      @transition/venue_shared_element_return
    </item>
  </style>
</resources>
